# Colours!
NOCOLOR='\033[0m' 
RED='\033[0;31m' 
GREEN='\033[0;32m' 
ORANGE='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
LIGHTGRAY='\033[0;37m'
DARKGRAY='\033[1;30m'
LIGHTRED='\033[1;31m'
LIGHTGREEN='\033[1;32m'
YELLOW='\033[1;33m'
LIGHTBLUE='\033[1;34m'
LIGHTPURPLE='\033[1;35m'
LIGHTCYAN='\033[1;36m'
WHITE='\033[1;37m'

EXTS=asp,aspx,bat,cgi,htm,html,js,log,php,phtml,sh,sql,txt,xml

highlight() { perl -pe "s/$1/${RED}$&${NOCOLOR}/g"; }

go_http () {
  if [ -z $1 ]; then
    if [ -z $TARGET ]; then     
      echo "Missing Target IP"
    else
      gobuster dir -e -w $W_COMMON -x $EXTS -u http://$TARGET "$@" | highlight "200|30[12]"
    fi
  else
    gobuster dir -e -w $W_COMMON -x $EXTS -u http://$1 "$@" | highlight "200|30[12]"
  fi
}

go_https () {
  if [ -z $1 ]; then
    if [ -z $TARGET ]; then     
      echo "Missing Target IP"
    else
      gobuster dir -e -w $W_COMMON -x $EXTS -u https://$TARGET "$@" | highlight "200|30[12]"
    fi
  else
    gobuster dir -e -w $W_COMMON -x $EXTS -u https://$1 "$@" | highlight "200|30[12]"
  fi
}

map () {
  if [ -z $1 ]; then
    if [ -z $TARGET ]; then     
      echo "Missing Target IP"
    else
      nmap -F $TARGET "$@" | highlight "^2[12]\/tcp|^80\/tcp"
    fi
  else
    nmap -F $1 "$@" | highlight "^2[12]\/tcp|^80\/tcp"
  fi
}

map_version () {
  if [ -z $1 ]; then
    if [ -z $TARGET ]; then     
      echo "Missing Target IP"
    else
      if [ -z $PORTS ]; then
        nmap -sV -p- $TARGET "$@" | highlight "^2[12]\/tcp|^80\/tcp"
      else
        nmap -sV -p $PORTS $TARGET "$@" | highlight "^2[12]\/tcp|^80\/tcp"
      fi
    fi
  else
    if [ -z $PORTS ]; then
      nmap -sV -p- $1 "$@" | highlight "^2[12]\/tcp|^80\/tcp"
    else
      nmap -sV -p $PORTS $1 "$@" | highlight "^2[12]\/tcp|^80\/tcp"
    fi
  fi
}

map_script () {
  if [ -z $1 ]; then
    if [ -z $TARGET ]; then     
      echo "Missing Target IP"
    else
      if [ -z $PORTS ]; then
        nmap -sC -p- $TARGET "$@" | highlight "^2[12]\/tcp|^80\/tcp"
      else
        nmap -sC -p $PORTS $TARGET "$@" | highlight "^2[12]\/tcp|^80\/tcp"
      fi
    fi
  else
    if [ -z $PORTS ]; then
      nmap -sC -p- $1 "$@" | highlight "^2[12]\/tcp|^80\/tcp"
    else
      nmap -sC -p $PORTS $1 "$@" | highlight "^2[12]\/tcp|^80\/tcp"
    fi
  fi
}
